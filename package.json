{
    "name": "iobeya-e2e-tests",
    "version": "1.0.0",
    "description": "iObeya e2e test framework",
    "main": "index.js",
    "scripts": {
        "test": "jest --runInBand",
        "test.watch": "jest --watchAll"
    },
    "validate-branch-name": {
        "pattern": "/^(automate|review)\\-([\\w-]+?)(\\d+)?$",
        "errorMsg": "Branch name format : <type>-<name>-<issue_ID>"
    },
    "repository": {
        "type": "git",
        "url": "git@gitlab.iobeya.io:gayari/iobeya-e2e-tests.git"
    },
    "keywords": [
        "jest",
        "playwright",
        "jest-playwright"
    ],
    "author": "Ghada Ayari",
    "license": "ISC",
    "devDependencies": {
        "@babel/preset-env": "^7.21.4",
        "@playwright/test": "^1.31.2",
        "babel-jest": "^29.5.0",
        "jest": "^27.3.1",
        "jest-html-reporters": "^3.1.4",
        "jest-junit": "^15.0.0",
        "jest-playwright-preset": "^1.7.0",
        "playwright": "^1.31.2"
    }
}
